@using UsedCars.Services
@inject IUserService userService;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UsedCars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/pics/pa_logo.jpg" />
</head>
<body style="background-color:dimgray;">
    <header>
        <div class="pos-f-t">
            <nav class="navbar" style="background-color:black;">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/pics/logo.jpg" width="240" height="60" alt="">
                </a>

                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="float-left">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ShopFuntionsModal">Shop functions</button>
                        </div>
                    }
                </div>

                <div>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <div class="mr-5">
                            <a style="color:white">Logged in as @IDAO.Singleton.GetUserByEmail(User.Claims.First().Value).Name!</a>
                        </div>

                        <div class="float-right">

                            @Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "btn btn-danger" })
                        </div>
                    }
                    else
                    {
                        <div class="float-right">
                            @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "btn btn-warning mr-3 text-white" })
                        </div>
                        <div class="float-right">
                            @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "btn btn-success" })
                        </div>
                    }
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="ShopFuntionsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Shop function list</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @Html.ActionLink("Create shop", "Index", "Shop", null, new { @class = "nav-link text-white btn btn-success mr-2" })
                    @Html.ActionLink("Shop list", "List", "Shop", null, new { @class = "nav-link text-white btn btn-secondary mr-2" })
                    @Html.ActionLink("Add vehicle", "Create", "Vehicle", null, new { @class = "nav-link text-white btn btn-dark mr-2" })
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted" style="background-color:black">
        <div class="container">
            &copy; 2020 - UsedCars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
