@using UsedCars.Services
@inject IUserService userService;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UsedCars</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/pics/pa_logo.jpg" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>
<body style="background-color:dimgray;">
    <header>
        <div class="pos-f-t">
            <nav class="navbar" style="background-color:black;">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/pics/logo.jpg" width="240" height="60" alt="">
                </a>

                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="float-left">
                            @Html.ActionLink("Create shop", "Index", "Shop", null, new { @class = "nav-link text-white btn btn-success mr-2" })
                        </div>
                    }

                    <div class="float-left">
                        @Html.ActionLink("Shop list", "Shop_List", "Shop", null, new { @class = "nav-link text-white btn btn-secondary mr-2" })
                    </div>

                    <div class="float-left">
                        @Html.ActionLink("User list", "User_List", "User", null, new { @class = "nav-link text-white btn btn-info mr-2" })
                    </div>
                </div>

                <div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="mr-5">
                            <a style="color:white">Logged in as @User.FindFirst("Username").Value!</a>
                        </div>

                        <div class="float-right">

                            @Html.ActionLink("Log Out", "Logout", "Account", null, new { @class = "btn btn-danger" })
                        </div>
                    }
                    else
                    {
                        <div class="float-right">
                            @Html.ActionLink("Sign up", "Register", "Account", null, new { @class = "btn btn-warning mr-3 text-white" })
                        </div>
                        <div class="float-right">
                            @Html.ActionLink("Log In", "Login", "Account", null, new { @class = "btn btn-success" })
                        </div>
                    }
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:black">
        <div class="container">
            &copy; 2020 - UsedCars - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
