@model ShopModel
@{
    ViewData["Title"] = "Index";
}

<h1>Shop - Creator</h1>

@using (Html.BeginForm("Create_Shop", "Shop", FormMethod.Post))
{
    <div class="form-group">
        <label for="">Name:</label>
        @Html.TextBoxFor(m => m.Name, new {Name = "name", @class = "form-control", @required = "" })
    </div>

    <div class="form-group">
        <label for="">Address:</label>
        @Html.TextBoxFor(m => m.Address, new { Name = "address", @class = "form-control", @required = "" })
    </div>

    <input type="hidden" name="email" value="@User.Claims.First().Value" />
    <button type="submit" class="btn btn-success">Add</button>
}