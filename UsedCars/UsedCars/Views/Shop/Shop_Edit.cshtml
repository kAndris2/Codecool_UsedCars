@model ShopModel
@{
    ViewData["Title"] = Model.Name;
}

<br>
<div class="float-right">
    @Html.ActionLink("Delete shop", "Delete_Shop", "Shop", new { id = Model.ID }, new { @class = "btn btn-danger" })
</div>

<h1>Shop - Editor</h1>

<form method="post" asp-controller="Picture" asp-action="Upload" enctype="multipart/form-data">
    <div class="form-group row">
        <div class="col-sm-10">
            <div class="custom-file">
                <input type="hidden" name="type" value="shop" />
                <input type="hidden" name="id" value="@Model.ID" />
                <input class="form-control custom-file-input" type="file" name="file" />
                <label class="custom-file-label">Browse a picture to upload!</label>
            </div>
        </div>
        <button class="btn btn-info" type="submit">Upload</button>

    </div>
</form>

@using (Html.BeginForm("Editor", "Shop", FormMethod.Post))
{
    <div class="form-group">
        <label>
            <b>Name:</b>
        </label>
        @Html.TextBoxFor(m => m.Name, new { Name = "name", @class = "form-control", @required = "" })
    </div>

    <div class="form-group">
        <label>
            <b>Address:</b>
        </label>
        @Html.TextBoxFor(m => m.Address, new { Name = "address", @class = "form-control", @required = "" })
    </div>

    <div class="form-group">
        <label>
            <b>Webpage:</b>
        </label>
        @Html.TextBoxFor(m => m.WebPage, new { Name = "webpage", @class = "form-control", @required = "" })
    </div>

    <div class="form-group">
        <label>
            <b>Description:</b>
        </label><br>
        <textarea name="description" cols="100" rows="7" required>@Model.Description</textarea>
    </div>

    <input type="hidden" name="id" value="@Model.ID" />
    <button type="submit" class="btn btn-success">Done</button>

    <div class="float-right">
        <span>
            @Html.ActionLink("Back", "Shop_Profile", "Shop", new { id = Model.ID}, new { @class = "btn btn-danger ml-auto mr-1" })
        </span>
    </div>
}