<br>
<div class="float-right">
    <button onclick="backToProfile()" class="btn-danger">Back</button>
</div>

<h1 id="owner" class="card-text"></h1>

<div id="creator" class="container" width:1900px; border:1px solid black;">

    <div class="row">

        <div class="col-sm-2">
            <label>
                <b>Brand:</b>
            </label><br>
            <input type="text" id="brand" required />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Model:</b>
            </label>
            <input type="text" id="model" required />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Type:</b>
            </label>
            <input type="text" id="type" required />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Type designation:</b>
            </label>
            <input type="text" id="type_designation" required />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Fuel:</b>
            </label>
            <input type="text" id="fuel" required />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Vintage:</b>
            </label><br>
            <select id="vintage"></select>
        </div>

        <div class="col-sm-1">
            <label>
                <b>Validity:</b>
            </label><br>
            <select id="validity">
                <option value="Valid">Valid</option>
                <option value="Invalid">Invalid</option>
            </select>
        </div>

        <div class="col-sm-2">
            <label>
                <b>Price:</b>
            </label><br>
            <input type="number" id="price" placeholder="Ft" />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Cylinder capacity:</b>
            </label><br>
            <input type="number" id="cylinder" placeholder="cm3" />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Performance:</b>
            </label><br>
            <input type="number" id="performance" placeholder="kW" />
        </div>

        <div class="col-sm-2">
            <label>
                <b>Odometer:</b>
            </label>
            <input type="number" id="odometer" placeholder="km" required />
        </div>

        <div class="col-7">
            <label>
                <b>Description:</b>
            </label><br>
            <textarea id="description" cols="100" rows="7" required></textarea>
        </div>

    </div>

    <button onclick="createVehicle()" class="btn btn-success">Add new Car</button>

</div>
<br />

<div id="vehicles"></div>

<script src="~/js/shop_garage.js"></script>